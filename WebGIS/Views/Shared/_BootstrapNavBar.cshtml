<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/frontend/lib/bootstrap-4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/frontend/lib/font-awesome/css/all.css" rel="stylesheet" />
    <style>
        html,
        body {
            width: 100%;
            height: 100%;
        }
    </style>
    @RenderSection("css", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
            <a class="navbar-brand" href="/Page/OneMap"><i class='fa fa-university'></i> WebGIS系统</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Page/OneMap"><i class='fa fa-home'></i> 首页</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Page/SystemConfig"><i class='fa fa-cog'></i> 系统设置</a>
                    </li>
                    <li class='nav-item active dropdown'>
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class='fa fa-user'></i> @User.Identity.Name
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#" id='LoginOutBtn'><span class="fa fa-sign-out-alt text-success"></span> 登出</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="height:93%">
        @RenderBody()
    </div>
    <script type="text/Javascript" src="~/frontend/lib/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/frontend/js/tool/UserVerify.js"></script>
    <script type="text/Javascript" src="/frontend/js/config.js"></script>
    <script src="~/frontend/js/tool/Messager.js"></script>
    <script src="~/frontend/lib/popper/popper.min.js"></script>
    <script type="text/Javascript" src="~/frontend/lib/bootstrap-4.3.1/js/bootstrap.min.js"></script>
    @RenderSection("javascript", required: false)
</body>
</html>
